---
import type { HTMLAttributes } from 'astro/types';
import { cn } from "@/lib/utils";

type Variant = "primary" | "secondary" | "outline" | "ghost";
type Size = "sm" | "md" | "lg";

interface CustomProps {
  variant?: Variant;
  size?: Size;
  class?: string;
}

type LinkProps = CustomProps & Omit<HTMLAttributes<'a'>, 'href'> & { 
  href: string;
};

type ButtonElementProps = CustomProps & Omit<HTMLAttributes<'button'>, 'href'> & { 
  href?: never;
};

type Props = LinkProps | ButtonElementProps;

const { 
  variant = "primary", 
  size = "md", 
  class: className,
  ...props 
} = Astro.props;

const baseStyles = "inline-flex items-center justify-center rounded-lg font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent/50 disabled:pointer-events-none disabled:opacity-50 cursor-pointer text-center";

const variants: Record<Variant, string> = {
  primary: "bg-accent text-white hover:opacity-90 shadow-sm",
  secondary: "bg-slate-100 text-slate-900 hover:bg-slate-200 dark:bg-slate-800 dark:text-slate-100",
  outline: "border border-border bg-transparent hover:bg-slate-100 dark:hover:bg-slate-800 text-text-primary",
  ghost: "hover:bg-slate-100 dark:hover:bg-slate-800 text-text-primary",
};

const sizes: Record<Size, string> = {
  sm: "h-9 px-3 text-xs",
  md: "h-10 px-4 py-2 text-sm",
  lg: "h-11 px-8 text-base",
};

const classes = cn(baseStyles, variants[variant], sizes[size], className);
---

{/* Pemisahan logika render.
  Casting tipe (as any) pada spread props terakhir untuk
  membungkam TypeScript yang kadang bingung saat spread union types.
  Ini aman karena sudah memvalidasi 'href' di logic if.
*/}

{
  'href' in props && props.href ? (
    <a class={classes} {...props as any}>
      <slot />
    </a>
  ) : (
    <button class={classes} {...props as any}>
      <slot />
    </button>
  )
}